@{
Layout=null;
}

<!DOCTYPE html>
<html lang="en">
    

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            background-color: #364150;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding:0;
            margin:0;
        }

        .login {
            width: 300px;
            background-color: white;
            padding: 10px 30px 30px;
        }

        .login h2 {
            color: #32C5D2;
            text-align: center;
        }

        input {
            width: 100%;
            padding: 12px;
            border: none;
            background-color: #DDE3EC;
            margin-bottom: 15px;
        }

        input:focus {
            outline: 2px solid rgb(190, 220, 255);
        }

        button {
            width: 100%;
            padding: 10px;
            border: none;
            background-color: #32C5D2;
            color: white;
            cursor: pointer;
            outline: none;

        }

        button:hover {
            background-color: hsl(185, 64%, 40%);
        }
    </style>

</head>

<body>
    <div class="login">
        <form action="/login/Enter" method="POST">
            <h2>Sign In</h2>
            <input required minlength="3" placeholder="Login" name="login" type="text">
            <input required minlength="3" placeholder="Password" name="password" type="password">
            <button type="submit"> Enter </button>
        </form>
    </div>
</body>

</html>